# ===========================================
# FURGOCASA - Variables de Entorno
# ===========================================
# Copia este archivo como .env.local y completa los valores

# ===========================================
# SUPABASE (Base de datos y autenticación)
# ===========================================
# Obtén estos valores en: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# OPENAI API (Traducciones automáticas)
# ===========================================
# Obtén tu API key en: https://platform.openai.com/api-keys
# OPCIONAL: Si no se configura, solo usará traducciones estáticas
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# REDSYS (Pasarela de pago)
# ===========================================
REDSYS_MERCHANT_CODE=your-merchant-code
REDSYS_TERMINAL=001
REDSYS_SECRET_KEY=your-redsys-secret-key
REDSYS_ENVIRONMENT=test

# ===========================================
# RESEND (Servicio de emails)
# ===========================================
# Obtén tu API key en: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@furgocasa.com

# ===========================================
# TINYMCE (Editor de blog)
# ===========================================
# Obtén tu API key en: https://www.tiny.cloud/auth/signup/
NEXT_PUBLIC_TINYMCE_API_KEY=your-tinymce-api-key

# ===========================================
# URLs de la aplicación
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===========================================
# ANALYTICS (Opcional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=XXXXXXXXXX
